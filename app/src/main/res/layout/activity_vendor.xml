<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/productImageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/user"
        android:contentDescription="Product Image"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"/>

    <!-- Product Title EditText -->
    <EditText
        android:id="@+id/productTitleEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Title"
        android:inputType="text"
        android:layout_marginTop="16dp"/>

    <!-- Product Description EditText -->
    <EditText
        android:id="@+id/productDescriptionEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Description"
        android:inputType="text"
        android:layout_marginTop="8dp"/>

    <!-- Product Price EditText -->
    <EditText
        android:id="@+id/productPriceEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Price"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"/>

    <!-- Product Category Spinner -->
    <Spinner
        android:id="@+id/productCategorySpinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <!-- Upload Product Button -->
    <Button
        android:id="@+id/uploadProductButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Product"
        android:layout_marginTop="16dp"/>

</LinearLayout>
